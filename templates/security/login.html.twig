

{% block title %}{% endblock %}

{% block body %}
    <style>
        body,
        .signin {
            background-color: #114226;
            font-family: 'Montserrat', sans-serif;
            color: #fff;
            font-size: 14px;
            letter-spacing: 1px;
        }

        .login {
            position: relative;
            height: 560px;
            width: 405px;
            margin: auto;
            padding: 60px 60px;
            background: url(https://th.bing.com/th/id/OIP.-ygMQWoGKvme8KCbasRFwQHaHa?w=1000&h=1000&rs=1&pid=ImgDetMain) no-repeat   center center #505050;
            background-size: cover;
            box-shadow: 0px 30px 60px -5px #000;
        }

        form {
            padding-top: 80px;
        }

        .active {
            border-bottom: 0px solid #1161ed;
        }



        h2 {
            padding-left: 12px;
            font-size: 22px;
            text-transform: uppercase;
            padding-bottom: 5px;
            letter-spacing: 2px;
            display: inline-block;
            font-weight: 100;
        }

        h2:first-child {
            padding-left: 126px;

        }

        span {
            text-transform: uppercase;
            font-size: 15px;
            opacity: 0.9;
            display: inline-block;
            position: relative;
            top: -50px;
            transition: all 0.5s ease-in-out;
            color: white;
        }

        .text {
            border: none;
            width: 89%;
            padding: 10px 20px;
            display: block;
            height: 15px;
            border-radius: 20px;
            background: #FFFFFF;
            border: 2px solid rgba(255, 255, 255, 0);
            overflow: hidden;
            margin-top: 54px;
            transition: all 0.5s ease-in-out;
        }

        .text:focus {
            outline: 0;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            background: rgba(0, 0, 0, 0);
        }

        .text:focus + span {
            opacity: 0.9;
        }

        input[type="text"] {
            font-family: 'Montserrat', sans-serif;
            color: #fff;
        }

        input[type="password"] {
            font-family: 'Montserrat', sans-serif;
            color: #fff;

        }



        input {
            display: inline-block;
            padding-top: 30px;
            font-size: 14px;
        }

        h2,
        span,
        .custom-checkbox {
            margin-left: 20px;
        }

        .custom-checkbox {
            -webkit-appearance: none;
            background-color: rgba(255, 255, 255, 0.1);
            padding: 8px;
            border-radius: 2px;
            display: inline-block;
            position: relative;
            top: 6px;
        }

        .custom-checkbox:checked {
            background-color: #95e9a1;
        }

        .custom-checkbox:checked:after {
            content: '\2714';
            font-size: 10px;
            position: absolute;
            top: 1px;
            left: 4px;
            color: #fff;
        }

        .custom-checkbox:focus {
            outline: none;
        }

        label {
            display: inline-block;
            padding-top: 10px;
            padding-left: 5px;
        }

        .signin {
            background-color: #95e9a1;
            color: #000000;
            width: 100%;
            padding: 10px 20px;
            display: block;
            height: 39px;
            border-radius: 20px;
            margin-top: 30px;
            transition: all 0.5s ease-in-out;
            border: none;
            text-transform: uppercase;
        }

        .signin:hover {
            background: #e4e4a1;
            box-shadow: 0px 4px 35px -5px #e4e4a1;
            cursor: pointer;
        }

        .signin:focus {
            outline: none;
        }

        hr {
            border: 1px solid rgba(255, 255, 255, 0.1);
            top: 85px;
            position: relative;
        }

        a {
            text-align: center;
            display: block;
            top: -10px;
            position: relative;
            text-decoration: none;
            color: rgba(255, 255, 255, 0.2);
        }
    </style>


<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>

<div class="login">
    <h2 class="active"> LOGIN </h2>


    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}






        <input type="email" value="{{ last_username }}" class="text" name="email" id="inputEmail"  autocomplete="email" required autofocus>
        <span>Email</span>
        <br>

        <br>

        <input type="password" class="text"  id="inputPassword" name="password" autocomplete="current-password" required>
        <span>password</span>
        <br>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <input type="checkbox" id="checkbox-1-1" class="custom-checkbox" />
        <label for="checkbox-1-1">Keep me Signed in</label>

        <button class="signin" type="submit">
            Sign In
        </button>


        <hr>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% else %}
            <a href="{{ path('app_register') }}" style="color: black">Register</a>
        {% endif %}

        {% endblock %}

    </form>



</div>
